    {{item.fax_phone?'<div><strong>Fax</strong><br/>'~item.fax_phone ~'</div>':''}}
    {{item.whatsapp?'<div><strong>Whatsapp</strong><br/>'~item.whatsapp ~'</div>':''}}
    </span>
    </div>
</div>
{% endblock %}